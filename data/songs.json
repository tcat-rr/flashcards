{
    "Songs": {
        "Like Melodies": {
            "Song": {
                "Line01": {
                    "Question": "Wie Melodien zieht es",
                    "Answer": "Thoughts, like melodies,"
                }, "Line02": {
                    "Question": "Mir leise durch den Sinn,",
                    "Answer": "Steal softly through my mind,"
                }, "Line03": {
                    "Question": "Wie Frühlingsblumen blüht es",
                    "Answer": "Like spring flowers they blossom"
                }, "Line04": {
                    "Question": "Und schwebt wie Duft dahin.",
                    "Answer": "And drift away like fragrance."
                }, "Line05": {
                    "Question": "Doch kommt das Wort und faßt es",
                    "Answer": "Yet when words come and capture them"
                }, "Line06": {
                    "Question": "Und führt es vor das Aug’,",
                    "Answer": "And bring them before my eyes,"
                }, "Line07": {
                    "Question": "Wie Nebelgrau erblaßt es",
                    "Answer": "They turn pale like grey mist"
                }, "Line08": {
                    "Question": "Und schwindet wie ein Hauch.",
                    "Answer": "And vanish like a breath."
                }, "Line09": {
                    "Question": "Und dennoch ruht im Reime",
                    "Answer": "Yet surely in rhyme"
                }, "Line10": {
                    "Question": "Verborgen wohl ein Duft,",
                    "Answer": "A fragrance lies hidden,"
                }, "Line11": {
                    "Question": "Den mild aus stillem Keime",
                    "Answer": "Summoned by moist eyes"
                }, "Line12": {
                    "Question": "Ein feuchtes Auge ruft.",
                    "Answer": "From the silent seed."
                }
            }
        }   
    }
}
